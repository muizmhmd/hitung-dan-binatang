<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5pt"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/background_binatang"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgGambarBinatang"
            android:src="@drawable/beruang"
            android:layout_width="50pt"
            android:layout_height="50pt"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNama"
                android:text="Beruang"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/txtDeskripsi"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="berauaajdkjashdkadasd ashdjkah jsd a asd ajsj dhak wi oakwofa akdjw asdasdw sad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>